{
  "name": "fastest-validator-decorators",
  "author": "Toby de Havilland",
  "version": "2.0.0-alpha.0",
  "description": "Fastest validator decorators",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AmauryD/fastest-validator-decorators.git"
  },
  "maintainers": [
    "AmauryD <deflorenne.amaury@gmail.com> (https://github.com/AmauryD)"
  ],
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "tsc",
    "prebuild": "pnpm run clean",
    "lint": "eslint --ignore-path .gitignore **/*.ts",
    "test": "jest",
    "pretest": "pnpm run lint",
    "prepublish": "pnpm run test && pnpm run build"
  },
  "files": [
    "dist/src"
  ],
  "keywords": [
    "validation",
    "validator",
    "validators",
    "validate",
    "schema",
    "typescript",
    "decorators"
  ],
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^18.7.3",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "fastest-validator": "~1.15.0",
    "jest": "^29.0.2",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "peerDependencies": {
    "fastest-validator": "~1.15.0"
  },
  "dependencies": {
    "type-fest": "~2.19.0",
    "reflect-metadata": "~0.1.13"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.test.(ts|js)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "globals": {
      "ts-jest": {
        "compiler": "typescript",
        "tsconfig": "tsconfig.json"
      }
    }
  }
}
