{
  "compilerOptions": {
    "strict": true,
    "module": "ES2022",
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "verbatimModuleSyntax": true,
    "emitDecoratorMetadata": true,
    "lib": [
        "dom",
        "ESNext"
    ],
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
